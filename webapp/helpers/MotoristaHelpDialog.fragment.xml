<core:FragmentDefinition	
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		title="Motorista"
		class="sapUiPopupWithPadding sapUiSizeCompact"
		items="{/Motoristas}"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		cancel="_handleValueHelpClose">
		<ColumnListItem>
			<cells>
				<ObjectNumber
					number="{Id}"/>
				<ObjectIdentifier
					title="{Nome}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="6em">
				<header>
					<Text text="ID"/>
				</header>
			</Column>
			<Column width="12em">
				<header>
					<Text text="Nome"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>