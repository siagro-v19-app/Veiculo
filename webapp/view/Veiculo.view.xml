<mvc:View
	controllerName="br.com.idxtecVeiculo.controller.Veiculo"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" 
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tableVeiculo"
						rows="{path: '/Veiculos'}"
						alternateRowsColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de veÃ­culos"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterPropery="Placa" sortProperty="Placa">
								<Label text="Placa"/>
								<t:template>
									<Text text="{Placa}"/>
								</t:template>
							</t:Column>
							<t:Column filterPropery="PlacaCarreta" sortProperty="PlacaCarreta">
								<Label text="Placa da carreta"/>
								<t:template>
									<Text text="{PlacaCarreta}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button text="Incluir novo" press="onIncluir"/>
						<Button text="Editar" press="onEditar"/>
						<Button text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>